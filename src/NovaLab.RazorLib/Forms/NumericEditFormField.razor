@namespace NovaLab.RazorLib.Forms

@inherits ComponentBase

<Field ColumnSize="@SizeColumn">
    <FieldLabel>@FieldLabel</FieldLabel>
    <FieldBody>
        <NumericEdit @bind-Value="@BindText">
        </NumericEdit>
    </FieldBody>
</Field>

@code {
    [Parameter] 
    public required string FieldLabel { get; set; }
    
    [Parameter]
    public required object? BindText { get; set; }

    [Parameter] 
    public IFluentColumnOnBreakpointWithOffsetAndSize SizeColumn { get; set; } = ColumnSize.IsAuto;
}