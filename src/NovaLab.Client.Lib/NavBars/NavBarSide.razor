@* ------------------------------------------------------------------------------------------------------------------ *@
@* Imports
@* ------------------------------------------------------------------------------------------------------------------ *@
@using NovaLab.Client.Lib.Components.Account
@using CodeOfChaos.Lucide
@using System.Security.Claims
@using LIconSize=CodeOfChaos.Lucide.IconSize

@* ------------------------------------------------------------------------------------------------------------------ *@
@* Descriptors
@* ------------------------------------------------------------------------------------------------------------------ *@
@attribute [Authorize, StreamRendering]

@inject AuthenticationStateProvider authenticationStateProvider
@* ------------------------------------------------------------------------------------------------------------------ *@
@* Html
@* ------------------------------------------------------------------------------------------------------------------ *@
<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                NovaLab
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <AuthorizeView>
                <BarItem>
                    <BarDropdown>
                        <BarDropdownToggle>
                            <LucideIcon Name="Icons.GalleryVerticalEnd" CssClass="b-bar-icon" Size="LIconSize.Default"/>
                            Stream Subjects
                        </BarDropdownToggle>
                        <BarDropdownMenu>
                            <BarDropdownItem To="stream-subject">All Subjects</BarDropdownItem>
                            <BarDropdownItem To="stream-subject/detail">Detailed view</BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>
            </AuthorizeView>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="api">Swagger API</BarLink>
            </BarItem>
            <BarItem>
                <LogoutButton/>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

